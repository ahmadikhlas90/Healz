@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}

<div class="row">
        <div style="margin-bottom:50px;  " class="tg-pageinnerbanner tg-haslayout tg-parallaximg" data-appear-top-offset="600" data-parallax="scroll" data-image-src="/images/banner/img-02.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-xs-12">
                        <div class="tg-pageheadcontent">
                            <div class="tg-pagetitle">
                                <h1>Login</h1>
                            </div>
                            <ol class="tg-breadcrumb">
                                <li><a href="#">Home</a></li>
                                <li class="tg-active">Login</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div class="col-md-4 col-sm-5 col-xs-12" style="margin-bottom:50px;" >
    <section>
            @*<h4 style="font-weight:bold;margin-left:10px">Use a local account to log in.</h4>
            <hr />*@
        <div id="tg-twocolumns" style="margin-left:10px; align-items:flex-start;display:flex;justify-content:center;" class="tg-twocolumns">
            <div class="">
                <aside id="tg-sidebar" class="tg-sidebar">
                    <div class="tg-widget tg-widgetlogin">
                        <div class="tg-widgetcontent">
                            <div class="tg-widgettitle">
                                <h3>Login Now</h3>
                            </div>
                            <form method="post" class="tg-themeform tg-formsignin">
                                <fieldset>
                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control" inputmode="email"  required/>
                                        <span asp-validation-for="Email" class="text-danger" ></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password"></label>
                                        <input asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label asp-for="RememberMe">
                                                <input asp-for="RememberMe" />
                                                <label asp-for="RememberMe"></label>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="tg-btn tg-btn-lg">Log in</button>
                                    </div>
                                    <div class="form-group">
                                        <p>
                                            <a @*asp-page="./ForgotPassword"*@ href="#">Forgot your password?</a>
                                        </p>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </section>
</div>
